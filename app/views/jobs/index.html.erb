
<h2>All Jobs for <%= @company.name %></h2><br/>

<h3 c class="link_color"><%= link_to "< Add a New Job >", new_company_job_path(@company, @jobs)%></h3>

<section>
  <% @jobs.each do |job| %>

    <h3><%= link_to job.title, company_job_path(@company,job) %> at <%= link_to job.company.name, company_job_path(@company, job) %></h3><br/>
    <%= link_to "Edit", edit_company_job_path(@company,job) %> or
    <%= link_to "Delete", company_job_path(@company,job), method: "delete" %><br/>

  <% end %>
</section>
