
<h2>All Jobs</h2><br/>

<section>
  <% @jobs.each do |job| %>

    <h3><%= link_to job.title, company_job_path(@company,job) %> at <%= link_to job.company.name, company_job_path(@company, job) %>, <%= job.city%></h3><br/>
    <p> Level of interest: <%= job.level_of_interest%></p><br>
    <%= link_to "Edit", edit_company_job_path(@company,job) %> or
    <%= link_to "Delete", company_job_path(@company,job), method: "delete" %><br/>

  <% end %>
</section>
