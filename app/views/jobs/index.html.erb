<h2>All Jobs for <%= @company.name %></h2><br/>

<h3 class="link_color" ><%= link_to "< Add a New Job >", new_company_job_path(@company, @jobs)%></h3>

<section>
  <% @jobs.each do |job| %>
    <ul><%= job.title %> at <%= job.company.name %></ul>
    <%= link_to "Edit", edit_company_job_path(@company,job) %> or
    <%= link_to "Delete", company_job_path(@company,job), method: "delete" %>
  <% end %>
</section>
