<h2>All Companies</h2><br/>

<h3 class="link_color" ><%= link_to "< Add a New Company >", new_company_path(@company)%></h3>
<section>
<ul>
  <% @companies.each do |company| %>
  <h3><%= link_to company.name, company_path(company) %></h3>
  <%= link_to "Edit ", edit_company_path(company) %> or
  <%= link_to " Delete", company_path(company), method: "delete" %>

  <% end %>
</ul>
</section>
