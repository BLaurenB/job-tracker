<h3 class="link_color">Add a contact for <%= @company.name %></h3>

<%= form_for [@company, @contact] do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :position %>
  <%= f.text_field :position %>

  <%= f.submit %>
<% end %>
